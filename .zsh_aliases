# Movement
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."

# Listing
alias ll="ls -lAh"
alias ls="ls -G"

# Useful Command Shortcuts

# Call shellcheck recursively on all commands in current directory
alias cdsh="find . -name '*.sh' -exec shellcheck {} +"

# Shortcuts to tools
alias np="$HOME/Code/dotfiles/bin/new_project.sh"
alias symlink="$HOME/Code/dotfiles/setup.sh -l"

# Reload my zsh files
alias reload="source $HOME/.zshrc; source $HOME/.zsh_aliases"

# https://github.com/chubin/wttr.in
alias weather="curl wttr.in"
